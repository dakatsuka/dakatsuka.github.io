<!doctype html>
%html{:lang => "ja", :prefix => "og: http://ogp.me/ns#"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0", :name => "viewport"}
    %meta{:content => "#{current_page.data.title} | #{data.site.name}", :property => "og:title"}
    %meta{:content => "article", :property => "og:type"}
    %meta{:content => "#{data.site.url}#{current_page.url}", :property => "og:url"}
    %meta{:content => "#{data.site.url}/images/logo.png", :property => "og:image"}
    %meta{:content => "#{data.site.url}/images/logo.png", :property => "og:image:secure_url"}
    %link{:rel => "shortcut icon", :href => "/favicon.ico", :type => "image/vnd.microsoft.icon" }
    %link{:rel => "icon", :href => "/favicon.ico", :type => "image/vnd.microsoft.icon" }
    %link{:rel => "canonical", :href => "#{data.site.url}#{current_page.url}"}
    %link{:rel => "license", :href => "//creativecommons.org/licenses/by-nc/3.0/deed.ja"}
    %link{:rel => "author", :href => "/about.html"}
    %title
      #{current_page.data.title unless current_page.nil?} | #{data.site.name}
    = stylesheet_link_tag "normalize.css", "font-awesome/css/font-awesome.min.css", "all"
    - if build?
      :javascript
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-45923728-1', 'dakatsuka.jp');
        ga('send', 'pageview');

  %body.page
    = partial "layouts/header"

    %main(role="main")
      %article.entry
        %header
          %h1= current_page.data.title

        %div.body
          = yield

    = partial "layouts/footer"
