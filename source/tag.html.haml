<!doctype html>
%html{:lang => "ja", :prefix => "og: http://ogp.me/ns#"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge;chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0", :name => "viewport"}
    %meta{:content => "Articles tagged #{tagname} | dakatsuka's blog", :property => "og:title"}
    %meta{:content => "article", :property => "og:type"}
    %meta{:content => "http://blog.dakatsuka.jp/tags/#{tagname}.html", :property => "og:url"}
    %meta{:content => "http://blog.dakatsuka.jp/images/ogp.png", :property => "og:image"}
    %meta{:content => "Articles tagged #{tagname}", :property => "og:description"}
    %link{:rel => "shortcut icon", :href => "/favicon.ico", :type => "image/vnd.microsoft.icon" }
    %link{:rel => "icon", :href => "/favicon.ico", :type => "image/vnd.microsoft.icon" }
    %title
      Articles tagged '#{tagname}' | dakatsuka's blog
    = stylesheet_link_tag "normalize.css", "font-awesome/css/font-awesome.min.css", "all"

  %body.page
    = partial "layouts/header"

    %main
      %article.entry
        %header
          %h1 Articles tagged '#{tagname}'

        %div.body
          %section#recent-entries
            %h2 Entries
            %ol
              - page_articles.each_with_index do |article, i|
                %li
                  = link_to article.title, article
                  %span= article.date.strftime('%Y年%m月%d日')

    = partial "layouts/footer"
